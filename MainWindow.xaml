<Window x:Class="WPF_SHQueryRecycleBin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_SHQueryRecycleBin"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock FontSize="18" FontWeight="Bold" Text="ごみ箱のサイズ: " />
        <TextBox FontSize="18" FontWeight="Bold" Text="{Binding RecycleBinSize}" Width="200" HorizontalContentAlignment="Right"/>
    </StackPanel>
</Window>
